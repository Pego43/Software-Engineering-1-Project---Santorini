                style="-fx-background-radius: 30; -fx-border-color: #77b1c2; -fx-border-radius: 30; -fx-border-width: 3;">
            <graphic>
                <ImageView fitHeight="46.0" fitWidth="53.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/castorpollux_bothBuild.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="stopPawn" layoutX="568.0" layoutY="1.0" mnemonicParsing="false" prefHeight="35.0"
                prefWidth="54.0"
                style="-fx-background-radius: 30; -fx-border-color: #77b1c2; -fx-border-radius: 30; -fx-border-width: 3;">
            <graphic>
                <ImageView fitHeight="46.0" fitWidth="53.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/pauseHand.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <ImageView fitHeight="182.0" fitWidth="173.0" layoutX="26.0" layoutY="317.0" pickOnBounds="true"
                   preserveRatio="true">
            <image>
                <Image url="@images/ScyllaTail.png"/>
            </image>
        </ImageView>
    </children>
</AnchorPane>
