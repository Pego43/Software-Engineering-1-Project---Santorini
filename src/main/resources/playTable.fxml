                <Cursor fx:constant="HAND"/>
            </cursor>
            <graphic>
                <ImageView fx:id="firstPl" fitHeight="172.0" fitWidth="109.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/Players/Gamer_1.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="movePawn" layoutX="321.0" layoutY="2.0" mnemonicParsing="false" prefHeight="53.0"
