                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
        </GridPane>
        <Button fx:id="submitAction" layoutX="329.0" layoutY="490.0" mnemonicParsing="false" prefHeight="35.0"
                prefWidth="110.0"
                style="-fx-background-radius: 30; -fx-border-radius: 30; -fx-border-color: ddc585; -fx-border-width: 2;"
                text="Manda Mossa">
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
        <Button fx:id="jumpMove" layoutX="528.0" layoutY="489.0" mnemonicParsing="false" prefHeight="34.0"
                prefWidth="109.0"
                style="-fx-background-radius: 30; -fx-border-color: ddc585; -fx-border-radius: 30; -fx-border-width: 2;"
                text="Salta Mossa">
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
        <TextArea fx:id="textArea" editable="false" layoutX="757.0" layoutY="260.0" prefHeight="278.0" prefWidth="201.0"
                  styleClass="text-area" stylesheets="@style.css" text="" wrapText="true">
            <font>
                <Font size="13.0"/>
            </font>
        </TextArea>
        <Label fx:id="userName" alignment="CENTER" layoutX="25.0" layoutY="15.0" prefHeight="34.0" prefWidth="154.0"
